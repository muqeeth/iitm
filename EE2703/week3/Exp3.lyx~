\begin_layout LyX-Code
#get values of functions by performing matrix multiplication on A and coefficien
ts from least squares
\end_layout

\begin_layout LyX-Code
fn_values = dot(A,c1_lsa)
\end_layout

\begin_layout LyX-Code
gn_values = dot(A,c2_lsa)
\end_layout

\begin_layout LyX-Code
def f1(x):
\end_layout

\begin_layout LyX-Code
    return exp(x)
\end_layout

\begin_layout LyX-Code
def f2(x):
\end_layout

\begin_layout LyX-Code
    return cos(cos(x))
\end_layout

\begin_layout LyX-Code
def f3(x):
\end_layout

\begin_layout LyX-Code
    l = []
\end_layout

\begin_layout LyX-Code
    for i in x:
\end_layout

\begin_layout LyX-Code
        if(i<0):
\end_layout

\begin_layout LyX-Code
            i = i + 2*pi
\end_layout

\begin_layout LyX-Code
        if(i>2*pi):
\end_layout

\begin_layout LyX-Code
            i = i - 2*pi
\end_layout

\begin_layout LyX-Code
        l.append(i)
\end_layout

\begin_layout LyX-Code
    return exp(l)
\end_layout

\begin_layout LyX-Code
def f4(x):
\end_layout

\begin_layout LyX-Code
    return cos(cos(x))
\end_layout

\begin_layout LyX-Code
x=linspace(0,2*pi,401)
\end_layout

\begin_layout LyX-Code
x=x[:-1] # drop last term to have a proper periodic integral
\end_layout

\begin_layout LyX-Code
x1 = arange(-2*pi,4*pi,0.1)
\end_layout

\begin_layout LyX-Code
y1 = f1(x1)
\end_layout

\begin_layout LyX-Code
y2 = f2(x1)
\end_layout

\begin_layout LyX-Code
y3 = f3(x1)
\end_layout

\begin_layout LyX-Code
y4 = f4(x1)
\end_layout

\begin_layout LyX-Code
plt.semilogy(x1,y1,'r')
\end_layout

\begin_layout LyX-Code
plt.semilogy(x1,y3,'k')
\end_layout

\begin_layout LyX-Code
plt.semilogy(x,fn_values,'go')
\end_layout

\begin_layout LyX-Code
plt.grid(color='k',linestyle ='-',linewidth = 1)
\end_layout

\begin_layout LyX-Code
plt.xlabel('x')
\end_layout

\begin_layout LyX-Code
plt.ylabel('$f(x) = e^x$')
\end_layout

\begin_layout LyX-Code
plt.legend(['semilog plot of f(x) vs x','expected plot from fourier','plot
 from leastsquares'],loc='best')
\end_layout


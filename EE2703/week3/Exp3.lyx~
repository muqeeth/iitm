\begin_layout Section
Python code:
\end_layout

\begin_layout LyX-Code
from pylab import *
\end_layout

\begin_layout LyX-Code
import matplotlib.pyplot as plt
\end_layout

\begin_layout LyX-Code
from numpy import *
\end_layout

\begin_layout LyX-Code
from scipy.integrate import quad
\end_layout

\begin_layout LyX-Code
def f(x):
\end_layout

\begin_layout LyX-Code
    return exp(x)
\end_layout

\begin_layout LyX-Code
def g(x):
\end_layout

\begin_layout LyX-Code
    return cos(cos(x))
\end_layout

\begin_layout LyX-Code
def u(x,k):
\end_layout

\begin_layout LyX-Code
    return f(x)*cos(k*x)
\end_layout

\begin_layout LyX-Code
def v(x,k):
\end_layout

\begin_layout LyX-Code
    return f(x)*sin(k*x)
\end_layout

\begin_layout LyX-Code
a = []
\end_layout

\begin_layout LyX-Code
b = []
\end_layout

\begin_layout LyX-Code
#get fourier coefficients of exp(x) into a and b lists
\end_layout

\begin_layout LyX-Code
a.append((quad(u,0,2*pi,args=(0)))[0]/(2*pi))
\end_layout

\begin_layout LyX-Code
for k in range(1,26):
\end_layout

\begin_layout LyX-Code
    a.append(quad(u,0,2*pi,args=(k))[0]/pi)
\end_layout

\begin_layout LyX-Code
    b.append(quad(v,0,2*pi,args=(k))[0]/pi)
\end_layout

\begin_layout LyX-Code
def w(x,k):
\end_layout

\begin_layout LyX-Code
    return g(x)*cos(k*x)
\end_layout

\begin_layout LyX-Code
def z(x,k):
\end_layout

\begin_layout LyX-Code
    return g(x)*sin(k*x)
\end_layout

\begin_layout LyX-Code
c = []
\end_layout

\begin_layout LyX-Code
d = []
\end_layout

\begin_layout LyX-Code
#get fourier coefficients of cos(cos(x)) into  c and d lists
\end_layout

\begin_layout LyX-Code
c.append((quad(w,0,2*pi,args=(0)))[0]/(2*pi))
\end_layout

\begin_layout LyX-Code
for k in range(1,26):
\end_layout

\begin_layout LyX-Code
    c.append(quad(w,0,2*pi,args=(k))[0]/pi)
\end_layout

\begin_layout LyX-Code
    d.append(quad(z,0,2*pi,args=(k))[0]/pi)
\end_layout

\begin_layout LyX-Code
#To take coefficients in given vector form of integral approach
\end_layout

\begin_layout LyX-Code
c1_intg = [0]*(len(a)+len(b))
\end_layout

\begin_layout LyX-Code
c1_intg[0] = a[0]
\end_layout

\begin_layout LyX-Code
c1_intg[1::2] = a[1:]
\end_layout

\begin_layout LyX-Code
c1_intg[2::2] = b# Now c1_intg has exp(x) fourier coefficients
\end_layout

\begin_layout LyX-Code
c2_intg = [0]*(len(c)+len(d))
\end_layout

\begin_layout LyX-Code
c2_intg[0] = c[0]
\end_layout

\begin_layout LyX-Code
c2_intg[1::2] = c[1:]
\end_layout

\begin_layout LyX-Code
c2_intg[2::2] = d#Now c2_intg has cos(cos(x)) fourier
\end_layout

\begin_layout LyX-Code
#least square approach
\end_layout

\begin_layout LyX-Code
x=linspace(0,2*pi,401)
\end_layout

\begin_layout LyX-Code
x=x[:-1] # drop last term to have a proper periodic integral
\end_layout

\begin_layout LyX-Code
b=f(x)
\end_layout

\begin_layout LyX-Code
c=g(x)
\end_layout

\begin_layout LyX-Code
# f has been written to take a vector
\end_layout

\begin_layout LyX-Code
A=zeros((400,51))
\end_layout

\begin_layout LyX-Code
# allocate space for A
\end_layout

\begin_layout LyX-Code
A[:,0]=1
\end_layout

\begin_layout LyX-Code
# col 1 is all ones
\end_layout

\begin_layout LyX-Code
for k in range(1,26):
\end_layout

\begin_layout LyX-Code
    A[:,2*k-1]=cos(k*x) # cos(kx) column
\end_layout

\begin_layout LyX-Code
    A[:,2*k]=sin(k*x)
\end_layout

\begin_layout LyX-Code
# sin(kx) column
\end_layout

\begin_layout LyX-Code
#endfor
\end_layout

\begin_layout LyX-Code
c1_lsa=lstsq(A,b)[0]#coefficients of exp(x) using leastsquares approach
\end_layout

\begin_layout LyX-Code
c1_intg = asarray(c1_intg) 
\end_layout

\begin_layout LyX-Code
deviation = max(abs(c1_lsa-c1_intg))#get max deviation
\end_layout

\begin_layout LyX-Code
print deviation
\end_layout

\begin_layout LyX-Code
c2_lsa=lstsq(A,c)[0]#coefficients using leastsquares approach
\end_layout

\begin_layout LyX-Code
c2_intg = asarray(c2_intg)
\end_layout

\begin_layout LyX-Code
deviation = max(abs(c2_lsa-c2_intg))#get max deviation
\end_layout

\begin_layout LyX-Code
print deviation
\end_layout

\begin_layout LyX-Code
#to print coefficients of exp(x) and cos(cos(x)) with both approaches
\end_layout

\begin_layout LyX-Code
print c1_intg
\end_layout

\begin_layout LyX-Code
print c2_intg
\end_layout

\begin_layout LyX-Code
print c1_lsa
\end_layout

\begin_layout LyX-Code
print c2_lsa
\end_layout

\begin_layout LyX-Code
x1 = arange(0,51,1)#we take 26 a_n and 25 b_n coefficients
\end_layout

\begin_layout LyX-Code
#semilog plot of coefficients of exp(x)
\end_layout

\begin_layout LyX-Code
plt.title('semilog plot of coefficients of exp(x)')
\end_layout

\begin_layout LyX-Code

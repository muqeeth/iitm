\begin_layout Abstract
This report explains fourier approximations taking a periodic and a non
 periodic function as examples.The approach is made by least squares method
 and direct integration method.
 
\end_layout

\begin_layout Section
Introduction
\end_layout

\begin_layout Standard
We will compute fourier series of two functions,
\begin_inset Formula $\exp(x)$
\end_inset

 and 
\begin_inset Formula $\cos(\cos(x))$
\end_inset

 over the interval [0,
\begin_inset Formula $2\pi)$
\end_inset

 using Eq.
 (1) and Eq.
 (2)
\begin_inset Formula 
\begin{equation}
a_{0}+\sum_{n=1}^{\infty}\left\{ a_{n}\cos(nx)+b_{n}\sin(nx)\right\} 
\end{equation}

\end_inset

where the coefficients 
\begin_inset Formula $a_{n}$
\end_inset

 and 
\begin_inset Formula $b_{n}$
\end_inset

are given as
\begin_inset Formula 
\[
a_{0}=\frac{1}{2\pi}\int_{0}^{2\pi}f(x)dx
\]

\end_inset


\begin_inset Formula 
\[
a_{n}=\frac{1}{\pi}\int_{0}^{2\pi}f(x)\cos(nx)dx
\]

\end_inset


\begin_inset Formula 
\[
b_{n}=\frac{1}{\pi}\int_{0}^{2\pi}f(x)\sin(nx)dx
\]

\end_inset


\end_layout

\begin_layout Standard
for least square approach we take 25 coefficients
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
a_{0}+\sum_{n=1}^{25}a_{n}cos(nx_{i})+\sum_{n=1}^{25}b_{n}sin(nx_{i})\approx f(x_{i})
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
This turns into matrix problem Ac = b :
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\left(\begin{array}{cccccc}
1 & cos(x_{1}) & sin(x_{1}) & \ldots & cos(25x_{1}) & sin(25x_{1})\\
1 & cos(x_{2}) & sin(x_{2}) & \ldots & cos(25x_{2}) & sin(25x_{2})\\
\ldots & \ldots & \ldots & \ldots & \ldots & \ldots\\
1 & cos(x_{400}) & sin(x_{400}) & \ldots & cos(25x_{400}) & sin(25x_{400})
\end{array}\right)\left(\begin{array}{c}
a_{0}\\
a_{1}\\
b_{1}\\
\ldots\\
a_{25}\\
b_{25}
\end{array}\right)=\left(\begin{array}{c}
f(x_{1})\\
f(x_{2})\\
\ldots\\
f(x_{400})
\end{array}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where c are fourier coefficents.
\end_layout

